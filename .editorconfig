root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
indent_size = 4

[*.yml]
indent_size = 2
[*.yaml]
indent_size = 2
[*.json]
indent_size = 2
[*.ts]
indent_size = 2
[*.tsx]
indent_size = 2
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# OS依存スクリプトは意図的にCRLFを許可（Editorの補助用）
[*.bat]
end_of_line = crlf
[*.cmd]
end_of_line = crlf
[*.ps1]
end_of_line = crlf
