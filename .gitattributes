# Text normalization (default LF in repo)
* text=auto eol=lf

# Windows-native scripts keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Unix-native scripts force LF
*.sh  text eol=lf
*.py  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.ts  text eol=lf
*.tsx text eol=lf
*.sql text eol=lf
*.service text eol=lf
*.env text eol=lf
